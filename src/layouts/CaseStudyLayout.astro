---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import Tag from '../components/Tag.astro';
import TOC from '../components/TOC.astro';

interface Props {
  project: CollectionEntry<'projects'>;
  headings: { depth: number; slug: string; text: string }[];
}

const { project, headings } = Astro.props;
const { title, description, tags, role, repoUrl, liveUrl, publishedAt, updatedAt } = project.data;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(publishedAt);
---

<BaseLayout
  title={title}
  description={description}
  type="article"
  publishedAt={publishedAt}
  updatedAt={updatedAt}
>
  <article class="py-12 md:py-16">
    <div class="container-wide">
      <!-- Header -->
      <header class="mx-auto max-w-3xl">
        <a
          href="/projects"
          class="mb-6 inline-flex items-center text-sm text-gray-600 hover:text-accent dark:text-gray-400 dark:hover:text-accent-dark"
        >
          <svg class="mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Projects
        </a>

        <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          {title}
        </h1>

        <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
          {description}
        </p>

        <div class="mt-6 flex flex-wrap items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
          {role && (
            <span class="flex items-center">
              <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              {role}
            </span>
          )}
          <span class="flex items-center">
            <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {formattedDate}
          </span>
        </div>

        {(repoUrl || liveUrl) && (
          <div class="mt-6 flex flex-wrap gap-3">
            {repoUrl && (
              <a href={repoUrl} target="_blank" rel="noopener noreferrer" class="btn-secondary text-sm">
                <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                View Repository
              </a>
            )}
            {liveUrl && (
              <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="btn-primary text-sm">
                <svg class="mr-1.5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
                View Live
              </a>
            )}
          </div>
        )}

        {tags && tags.length > 0 && (
          <div class="mt-6 flex flex-wrap gap-2">
            {tags.map((tag) => <Tag tag={tag} />)}
          </div>
        )}
      </header>

      <!-- Content with TOC -->
      <div class="mt-12 grid gap-12 lg:grid-cols-[1fr_200px]">
        <div class="prose-custom mx-auto w-full max-w-3xl lg:mx-0">
          <slot />
        </div>
        <TOC headings={headings} />
      </div>
    </div>
  </article>
</BaseLayout>

