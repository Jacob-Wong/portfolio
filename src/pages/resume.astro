---
import BaseLayout from "../layouts/BaseLayout.astro";
import { PERSONAL, RESUME } from "../consts";
---

<BaseLayout
  title="Resume"
  description={`Professional experience and background of ${PERSONAL.name}.`}>
  <section class="py-12 md:py-16">
    <div class="container-narrow">
      <div class="flex items-center justify-between">
        <h1
          class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          Resume
        </h1>
        <a href="/resume.pdf" target="_blank" class="btn-primary">
          <svg
            class="mr-2 h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>
          Download PDF
        </a>
      </div>

      <!-- Experience -->
      <div class="mt-12">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
          Experience
        </h2>

        <div class="mt-6 space-y-8">
          <div class="border-l-2 border-accent pl-4 dark:border-accent-dark">
            <h3 class="font-medium text-gray-900 dark:text-white">
              Software Engineer
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {RESUME.companyName} · Full-time
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-500">
              {RESUME.startDate} - Present · {PERSONAL.location}
            </p>
            <ul
              class="mt-3 list-inside list-disc space-y-1 text-sm text-gray-600 dark:text-gray-400">
              <li>
                Led development of distributed task orchestration platform
                handling 10M+ daily jobs
              </li>
              <li>
                Designed and implemented real-time analytics infrastructure
              </li>
              <li>
                Mentored junior engineers and established engineering best
                practices
              </li>
            </ul>
          </div>

          <div class="border-l-2 border-gray-300 pl-4 dark:border-gray-700">
            <h3 class="font-medium text-gray-900 dark:text-white">Developer</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {RESUME.previousCompany} · Full-time
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-500">
              {RESUME.prevStartDate} - {RESUME.prevEndDate}
            </p>
            <ul
              class="mt-3 list-inside list-disc space-y-1 text-sm text-gray-600 dark:text-gray-400">
              <li>
                Revamped and maintained legacy web projects to support company's
                digital transformation strategy
              </li>
              <li>
                Designed schemas for NoSQL databases and developed new web
                applications
              </li>
              <li>
                Deployed containerised services to Kubernetes and integrated AWS
                Lambda functions
              </li>
              <li>Contributed to develop property rent/sale platform</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Education -->
      <div class="mt-12">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
          Education
        </h2>

        <div class="mt-6">
          <div class="border-l-2 border-gray-300 pl-4 dark:border-gray-700">
            <h3 class="font-medium text-gray-900 dark:text-white">
              {RESUME.degree}
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {RESUME.university}
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-500">
              {RESUME.graduationYear}
            </p>
          </div>
        </div>
      </div>

      <!-- Certifications (optional) -->
      <!-- <div class="mt-12">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Certifications</h2>

        <ul class="mt-6 space-y-2">
          <li class="flex items-center text-gray-600 dark:text-gray-400">
            <svg class="mr-2 h-4 w-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            {RESUME.certification1}
          </li>
          <li class="flex items-center text-gray-600 dark:text-gray-400">
            <svg class="mr-2 h-4 w-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            {RESUME.certification2}
          </li>
        </ul>
      </div> -->
    </div>
  </section>
</BaseLayout>
